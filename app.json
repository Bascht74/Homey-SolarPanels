{
  "id": "it.diederik.solar",
  "name": {
    "en": "Solar Panels"
  },
  "description": {
    "en": "PV production tracker for Homey"
  },
  "version": "1.2.0",
  "compatibility": "0.x || 1.x",
  "author": {
    "name": "Diederik Bakker",
    "email": "d@iederik.nl"
  },
  "images": {
    "large": "./assets/images/large.jpg",
    "small": "./assets/images/small.jpg"
  },
  "category": "tools",
  "drivers": [
    {
      "id": "pvoutput",
      "name": {
        "en": "PVOutput",
        "nl": "PVOutput"
      },
      "pair": [
        {
          "id": "pair"
        }
      ],
      "images": {
        "large": "./drivers/pvoutput/assets/images/large.jpg",
        "small": "./drivers/pvoutput/assets/images/small.jpg"
      },
      "class": "sensor",
      "capabilities": ["measure_power", "meter_power"]
    },
    {
      "id": "enphase",
      "name": {
        "en": "Enphase",
        "nl": "Enphase"
      },
      "pair": [
        {
          "id": "pair"
        }
      ],
      "images": {
        "large": "./drivers/enphase/assets/images/large.jpg",
        "small": "./drivers/enphase/assets/images/small.jpg"
      },
      "class": "sensor",
      "capabilities": ["measure_power", "meter_power"]
    },
    {
      "id": "solaredge",
      "name": {
        "en": "SolarEdge",
        "nl": "SolarEdge"
      },
      "pair": [
        {
          "id": "pair"
        }
      ],
      "images": {
        "large": "./drivers/solaredge/assets/images/large.jpg",
        "small": "./drivers/solaredge/assets/images/small.jpg"
      },
      "class": "sensor",
      "capabilities": ["measure_power", "meter_power"]
    }
  ],
  "dependencies": {
    "request": "*"
  }
}