{
  "id": "it.diederik.solar",
  "version": "2.0.0",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "Solar Panels",
    "nl": "Zonnepanelen"
  },
  "description": {
    "en": "PV production tracker for Homey.",
    "nl": "PV-opbrengsttracker voor Homey."
  },
  "category": "energy",
  "tags": {
    "en": [ "solar", "panels", "pv" ],
    "nl": [ "zonnepanelen", "pv" ]
  },
  "images": {
    "large": "./assets/images/large.jpg",
    "small": "./assets/images/small.jpg"
  },
  "author": {
    "name": "Diederik Bakker",
    "email": "diederik@outlook.com"
  },
  "drivers": [
    {
      "id": "pvoutput",
      "name": {
        "en": "PVOutput",
        "nl": "PVOutput"
      },
      "pair": [
        {
          "id": "pair"
        }
      ],
      "images": {
        "large": "./drivers/pvoutput/assets/images/large.jpg",
        "small": "./drivers/pvoutput/assets/images/small.jpg"
      },
      "class": "sensor",
      "capabilities": ["measure_power", "meter_power"]
    },
    {
      "id": "omnik",
      "name": {
        "en": "Omnik",
        "nl": "Omnik"
      },
      "pair": [
        {
          "id": "pair"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "large": "./drivers/omnik/assets/images/large.jpg",
        "small": "./drivers/omnik/assets/images/small.jpg"
      },
      "class": "sensor",
      "capabilities": ["measure_power", "meter_power"]
    }
  ]
}
